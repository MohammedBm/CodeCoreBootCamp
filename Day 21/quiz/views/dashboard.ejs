<% include ./partials/header %>




  <div class="container main">
    <%# profile %>
      <div class="row">
        <div class="col-md-4 hidden-sm hidden-xs">
          <div class="well profile">
            <div class="form-elemnts">
              <img src="<%= faker.random.image() %>">
              <div class="form-name">
                <h3><%= faker.name.findName() %></h4>
                <h5>@<%= faker.internet.userName() %></h5>
              </div>
            </div>
            <div class="form-msg">
              <h5>Messages</h5>
              <h3><%= Math.floor((Math.random() * 100) + 1); %></h3>
              </div>
            </div>
          </div>


          <%# Form  %>
            <div class="col-md-8 dashboard fixed-top">
              <form action="/dashboard" method="post">
                <div>
                  <label for="username"></label>
                  <input type="text" class="form-control" placeholder="Username" name="username" value="@<%= faker.internet.userName() %>">
                </div>
                <div>
                  <label for="message"></label>
                  <textarea class="form-control" name="message" maxlength="255"><%= `${faker.hacker.phrase()}` %></textarea>
                </div>
                <br>
                <div class="text-right submit">
                  <button class="btn btn-default" type="submit" name="submit">Submit</button>
                </div>
              </form>
            </div>
        </div>


        <div class="row">
          <div class="col-md-4 hidden-sm hidden-xs">
            <h3 class="trend-tags">Trending Tags</h3>
            <div class="well">
              <% for(let i = 0; i < 10; i++) { %>
                <h5>#<%= faker.lorem.word() %></h5>
                <% } %>
            </div>
          </div>

          <% if(tweets !== undefined){ %>
            <div class = "col-md-8 tweet-box">
              <% for(let i=0; i<tweets.length;i++) {%>
                <div class = "dashboard">
                  <img src = "<%= faker.random.image() %>" />
                  <div class = "tweet">
                    <h5><%= tweets[i].name %></h5>
                    <p><%= tweets[i].body %></p>
                    <p style="text-align: right; padding-right: 0;">Posted: <%= new Date() %></p>
                  </div>
                </div>

                <% } %>
            </div

            <% } %>







        </div>








      </div>




      <% include ./partials/footer %>
